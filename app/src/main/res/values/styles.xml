        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimary</item>
        <item name="colorAccent">@color/colorAccent</item>
        <item name="windowNoTitle">true</item>
        <item name="windowActionBar">false</item>
        <item name="android:itemBackground">@color/material_light_white</item>
        <item name="android:textColor">@color/material_light_black</item>
        <item name="android:textColorPrimary">@color/white</item>
        <item name="colorControlNormal">@color/material_green_200</item>
        <item name="colorSwitchThumbNormal">@color/material_red_400</item>
        <item name="android:colorForeground">@color/material_yellow_400</item>
        <item name="md_dark_theme">false</item>
    </style>


    <style name="SettingTheme" parent="Theme.AppCompat.Light">
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        <item name="android:textColorPrimary">@color/white</item>
    </style>

    <style name="edit_view">
        <item name="android:textSize">14.0sp</item>
        <item name="android:textColorHint">@color/hint</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_vertical</item>
        <item name="android:minHeight">45dp</item>
        <item name="android:paddingLeft">10dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">45dp</item>
        <item name="android:background">@color/white</item>
        <item name="android:singleLine">true</item>
    </style>

    <style name="mText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textSize">16.0sp</item>
        <item name="android:textColor">@color/black</item>
    </style>

    <style name="mBigText" parent="mText">
        <item name="android:textSize">16.0sp</item>
    </style>

    <style name="mCenterText" parent="mText">
        <item name="android:gravity">center</item>
    </style>

    <style name="MyMaterialSettings" parent="MaterialSettingsTheme">
        <item name="msColorPrimary">@color/colorPrimary</item>
        <item name="msColorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="msColorAccent">@color/colorAccent</item>
        <item name="msColorHeader">@color/colorAccent</item>
    </style>

    <style name="mButton">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">@drawable/button_nor</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="mRedButton" parent="mButton">
        <item name="android:background">@drawable/button_red</item>
    </style>

    <style name="mEditText">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColor">@color/black</item>
        <item name="android:textColorHint">@color/gray</item>
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:gravity">top|left</item>
        <item name="android:maxLength">5000</item>
    </style>

    <style name="mNullBackgroundEditText" parent="mEditText">
        <item name="android:background">@color/white</item>
    </style>

    <style name="cellRow">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center</item>
        <item name="android:background">@drawable/card</item>
        <item name="android:padding">12dp</item>
        <item name="android:minHeight">45dp</item>
    </style>



    <style name="Material_Card_View">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:minHeight">20dp</item>
        <item name="android:layout_marginLeft">8dp</item>
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginTop">4dp</item>
        <item name="android:layout_marginBottom">4dp</item>
    </style>
</resources>
